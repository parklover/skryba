{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}

<div class="form-group form-material floating" data-plugin="formMaterial">
    {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control'}}) }}
    {{ form_label(form.plainPassword.first, null,{'label_attr':{'class':'floating-label'} }) }}
</div>
<div class="form-group form-material floating" data-plugin="formMaterial">
    {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control'}}) }}
    {{ form_label(form.plainPassword.second, null,{'label_attr':{'class':'floating-label'} }) }}
</div>
{{ form_widget(form._token) }}
<button type="submit" class="btn btn-primary btn-block btn-lg m-t-40">{{ 'resetting.reset.submit'|trans }}</button>
{{ form_end(form) }}
